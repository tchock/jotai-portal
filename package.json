    "@types/node": "^24.0.10",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "3.5.3",
    "prettier-eslint": "^16.4.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
